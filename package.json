{
  "name": "@abmalk/mcpcode",
  "version": "1.0.2",
  "description": "Generate type-safe TypeScript wrappers for Model Context Protocol (MCP) tools. Connects to MCP servers via STDIO, discovers tools automatically, and generates clean, type-safe code.",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "mcpcode": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "watch": "node dist/cli.js watch",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AbhinavMalkoochi/code-mcp"
  },
  "bugs": {
    "url": "https://github.com/abmalk/mcpcode/issues"
  },
  "homepage": "https://github.com/AbhinavMalkoochi/code-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-generation",
    "typescript",
    "cli",
    "mcp-server",
    "mcp-tools",
    "type-safe",
    "codegen"
  ],
  "author": "abmalk",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
